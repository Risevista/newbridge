---
import Image from 'astro/components/Image.astro';

interface Props {
  logo: any; // image import per company
  logoAlt?: string;
  phone: string;
  hours: string;
  url: string;
  urlLabel?: string;
  class?: string;
}

const {
  logo,
  logoAlt = 'Company Logo',
  phone,
  hours,
  url,
  urlLabel = '',
  class: wrapperClass = ''
} = Astro.props as Props;
---
<div class={`grid grid-rows-4 md:text-[16px] text-[14px] font-extralight ${wrapperClass}`}>
  <!-- Row 1: Logo | Company name -->
  <div class="grid grid-cols-1 md:grid-cols-[1fr_5fr]">
    <div class="p-2 md:p-4 bg-white flex items-center justify-center border-b-2 border-gray-300">
      <Image src={logo} alt={logoAlt} class="h-12 md:h-16 w-auto object-contain" />
    </div>
    <div class="py-4 px-2 md:p-8 bg-blue-50 border-b-2 border-gray-300 flex items-center">
      <slot name="name" />
    </div>
  </div>

  <!-- Row 2: 電話番号 -->
  <div class="grid grid-cols-1 md:grid-cols-[1fr_5fr]">
    <div class="py-3 px-2 md:p-4 bg-white border-b-2 border-gray-300 flex items-center">電話番号</div>
    <div class="py-3 px-2 md:p-4 bg-blue-50 border-b-2 border-gray-300 flex items-center">
      {phone ? (<a href={`tel:${phone.replace(/\D/g, '')}`} class="text-blue-600 hover:text-blue-800 underline">{phone}</a>) : ('—')}
    </div>
  </div>

  <!-- Row 3: 営業時間 -->
  <div class="grid grid-cols-1 md:grid-cols-[1fr_5fr]">
    <div class="py-3 px-2 md:p-4 bg-white border-b-2 border-gray-300 flex items-center">営業時間</div>
    <div class="py-3 px-2 md:p-4 bg-blue-50 border-b-2 border-gray-300 flex items-center">{hours || '—'}</div>
  </div>

  <!-- Row 4: URL -->
  <div class="grid grid-cols-1 md:grid-cols-[1fr_5fr]">
    <div class="py-3 px-2 md:p-4 bg-white flex items-center">URL</div>
    <div class="py-3 px-2 md:p-4 bg-blue-50 flex items-center">
      {url ? (
        <a href={url} target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800 underline">{urlLabel || url}</a>
      ) : '—'}
    </div>
  </div>
</div>


