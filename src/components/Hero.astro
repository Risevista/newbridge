<section class="hero px-2" id="hero">
  <div class="hero-content">
      <h1 class="hero-text" data-text="圧倒的な安心をあなたに">圧倒的な安心をあなたに</h1>
      <p class="subtitle" data-text="Through investment and consumption,<br>make Japan the leading global nation.">Through investment and consumption,<br>make Japan the leading global nation.</p>
  </div>
</section>


<style>
  * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
  }

  body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      overflow-x: hidden;
      background: #000;
  }

  .hero {
      position: relative;
      width: 100%;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
      background: #000;
  }

  /* 背景のワイプレイヤー */
  .hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: #fff;
      transform: translateX(-100%);
      animation: wipeBackground 2.5s cubic-bezier(0.25, 0.1, 0.25, 1) 2s forwards;
      z-index: 1;
  }

  .hero-content {
      position: relative;
      z-index: 2;
      text-align: center;
      padding: 0 20px;
  }

  .hero-text {
      font-size: clamp(2.5rem, 8vw, 5rem);
      font-weight: 300;
      letter-spacing: 0.05em;
      line-height: 1.3;
      color: #fff;
      opacity: 0;
      transform: scale(0.8);
      animation: fadeInText 2s ease-out 0.5s forwards;
      mix-blend-mode: difference;
      position: relative;
  }

  /* 文字色変化のための追加レイヤー */
  .hero-text::after {
      content: attr(data-text);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      color: #000;
      opacity: 0;
      animation: changeTextColor 2.5s ease-in-out 2s forwards;
      mix-blend-mode: normal;
  }

  @keyframes fadeInText {
      to {
          opacity: 1;
          transform: scale(1);
      }
  }

  @keyframes wipeBackground {
      to {
          transform: translateX(0);
      }
  }

  @keyframes changeTextColor {
      to {
          opacity: 1;
      }
  }


  /* 追加のビジュアル要素 */
  .subtitle {
      margin-top: 30px;
      font-size: clamp(1rem, 3vw, 1.5rem);
      font-weight: 400;
      letter-spacing: 0.1em;
      color: #fff;
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInSubtitle 2.5s ease-out 4.5s forwards;
      mix-blend-mode: difference;
      white-space: nowrap;
  }

  /* Mobile: allow text wrapping and adjust font sizes */
  @media (max-width: 768px) {
      .hero-content {
          padding: 0 10px;
      }
      
      .hero-text {
          font-size: clamp(1.8rem, 6vw, 3rem);
      }
      
      .subtitle {
          white-space: normal;
          font-size: clamp(0.8rem, 2.5vw, 1.2rem);
          max-width: 100%;
          padding: 0 5px;
      }
  }

  .subtitle::after {
      content: attr(data-text);
      position: absolute;
      margin-top: 30px;
      left: 0;
      right: 0;
      width: 100%;
      color: #155aa8;
      opacity: 0;
      animation: changeSubtitleColor 2.5s ease-in-out 2s forwards;
      mix-blend-mode: normal;
      white-space: nowrap;
      text-align: center;
  }

  /* Mobile: allow text wrapping for pseudo-element */
  @media (max-width: 768px) {
      .subtitle::after {
          white-space: normal;
          font-size: clamp(0.8rem, 2.5vw, 1.2rem);
          max-width: 100%;
          padding: 0 5px;
      }
  }

  @keyframes fadeInSubtitle {
      to {
          opacity: 1;
          transform: translateY(0);
      }
  }

  @keyframes changeSubtitleColor {
      from {
          opacity: 0;
      }
      50% {
          opacity: 0;
      }
      to {
          opacity: 1;
      }
  }
</style>

<script>
  // 初回ロード時の遅延（オプション）
  window.addEventListener('load', () => {
      document.body.style.opacity = '1';
  });
</script>